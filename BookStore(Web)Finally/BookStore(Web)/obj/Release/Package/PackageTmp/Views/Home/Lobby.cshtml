@model BookStore_Web_.Models.ChatModel


<script src="~/Scripts/jquery-2.2.1.min.js"></script>
<script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<script src="~/Scripts/jquery-ui-1.8.20.min.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>
<script src="~/Scripts/Chat.js"></script>

<style type="text/css">
     #Lobby {
        font-family:'Microsoft JhengHei UI';
        position: absolute;
        width: 25%;
        left: 1%;
        height: 98%;
        top: 1%;
        background-color:#ededed;
        text-align: left;
    }

    #ChatHistory {
        font-family:'Microsoft JhengHei UI';
        position: absolute;
        width: 72%;
        left: 27%;
        height: 87%;
        top: 1%;
        background-color:#ededed;
        text-align: left;
        font-size: x-small;
        overflow-y: scroll;
    }

    #Speak {
        font-family:'Microsoft JhengHei UI';
        position: absolute;
        width: 72%;
        left: 27%;
        height: 10%;
        top: 89%;
        min-height: 60px;
        background: #0094ff;
        border: 1px solid rgba(0,0,0,0.15);
        border-radius: 4px;
        transition: all 0.3s ease-out;
        box-shadow: inset 0 1px 0 rgba(255,255,255,0.5), 0 2px 2px rgba(0,0,0,0.3), 0 0 4px 1px rgba(0,0,0,0.2); /* Font styles */
        text-decoration: none;
        text-shadow: 0 1px rgba(255,255,255,0.7);
        vertical-align: middle;
    }
</style>
<div id="RefreshArea">
    @{
        Html.RenderPartial("ChatHistory", Model);
    }
</div>
@Ajax.ActionLink("ActionLink", "Chatroom", new { user = "", logOn = "", logOff = "", chatMessage = "" }, new AjaxOptions { UpdateTargetId = "RefreshArea", OnSuccess = "ChatOnSuccess", OnFailure = "ChatOnFailure" }, new { @id = "ActionLink", @style = "visibility:hidden;" })
<div id="Speak">
    @*<table border="0" width:"100%">
        <tr>
            <td rowspan="3">*@
    <textarea id="txtSpeak" style="width: 70%" @*rows="2"*@></textarea>
    @*</td>
        <td>*@
    <button id="btnSpeak" value="Speak" style="font-weight: bold; width: 70px">
        送出
    </button>

    <button id="btnLogOff" value="LogOff" style="width: 70px">
        登出
    </button>

</div>
