@model BookStore_Web_.Models.ChatModel

@{
   // Layout = "~/Views/Shared/EasyEmp.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>

    <meta charset="utf-8" />
    <meta name="HandheldFriendly" content="True" />
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=yes" />

    <script src="~/Scripts/jquery-2.2.1.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/jquery-ui-1.8.20.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/Chat.js"></script>

    <title>Chat Room</title>
    <style type="text/css">
        body, html {
            height: 100%;
            text-align: center;
            margin: 0;
            padding: 0;
            overflow: hidden;
        }

        div, body, table {
            font-family:'Microsoft JhengHei UI';
            font-size: medium;
        }

            .p{
            font-family:'Microsoft JhengHei UI';
            font-size: medium;
            background-color:#d1d1d1;
        }

        #container {
            height: 80%;
            width: 80%;
            position: absolute;
            top: 10%;
            left: 10%;
            min-width: 320px;
            background-color: #d1d1d1;
            box-shadow: 0 8px 4px -4px rgba(0,0,0,0.4);
        }

        .box {
            font-family:'Microsoft JhengHei UI';
            display: inline-block;
            margin: 10px;
            padding: 8px 15px;
            background: #0094ff;
            border: 1px solid rgba(0,0,0,0.15);
            border-radius: 4px;
            transition: all 0.3s ease-out;
            box-shadow: inset 0 1px 0 rgba(255,255,255,0.5), 0 2px 2px rgba(0,0,0,0.3), 0 0 4px 1px rgba(0,0,0,0.2); /* Font styles */
            text-decoration: none;
            text-shadow: 0 1px rgba(255,255,255,0.7);
        }

        #Error {
            font-family:'Microsoft JhengHei UI';
            width: 80%;
            left: 10%;
            position: absolute;
            height: 10%;
            top: 91%;
            color: Red;
            font-weight: bold;
            text-align: center;
        }

        #LastRefresh {
            display: inline;
            position: absolute;
            font-size: xx-small;
            text-align: right;
            top: 7%;
            left: 10%;
            width: 80%;
        }

        #YourNickname {
            display: inline;
            position: absolute;
            font-size: medium;
            font-weight: bold;
            text-align: left;
            top: 7%;
            left: 10%;
            width: 50%;
        }
         .chatroom-start-btn{
            font-family:'Microsoft JhengHei UI';

        }
        .i{
            font-family:'Microsoft JhengHei UI';
            color:#838383
        }
        #btnSpeak{
            font-family:'Microsoft JhengHei UI';
            color:#0094ff;
        }
        #btnLogOff{
            font-family:'Microsoft JhengHei UI';
            color:#0094ff;
        }
    </style>
</head>
<body>

    <div id="YourNickname">
    </div>
    <div id="LastRefresh">
    </div>
    <div id="container">
        <div class="box" id="LoginPanel" style="color:white">
            暱稱:
            <input type="text" id="txtNickName" name="txtNickName" />
            <button class="chatroom-start-btn" id="btnLogin" value="Start" style="color:#0094ff">開始</button>
        </div>
    </div>
    <div id="Error">
    </div>
    @Ajax.ActionLink("Login", "Chatroom", new { thisUserLoggedOn = "" }, new AjaxOptions { UpdateTargetId = "container", OnFailure = "LoginOnFailure", OnSuccess = "LoginOnSuccess" }, new { @id = "LoginButton", @style = "visibility:hidden;" })


</body>
</html>
