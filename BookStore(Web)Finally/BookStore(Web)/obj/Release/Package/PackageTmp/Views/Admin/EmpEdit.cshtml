@model BookStore_Web_.Models.Emp_Information

@{
    ViewBag.Title = "EmpEdit";
    Layout = "~/Views/Shared/Easy.cshtml";
}
<div class="col-md-3"></div>
<div class="col-md-6" style="border-radius:30px;background: #d2dfed; background: -moz-linear-gradient(top, #d2dfed 0%, #c8d7eb 26%, #bed0ea 51%, #a6c0e3 51%, #afc7e8 62%, #bad0ef 75%, #99b5db 88%, #799bc8 100%); background: -webkit-linear-gradient(top, #d2dfed 0%,#c8d7eb 26%,#bed0ea 51%,#a6c0e3 51%,#afc7e8 62%,#bad0ef 75%,#99b5db 88%,#799bc8 100%); background: linear-gradient(to bottom, #d2dfed 0%,#c8d7eb 26%,#bed0ea 51%,#a6c0e3 51%,#afc7e8 62%,#bad0ef 75%,#99b5db 88%,#799bc8 100%); filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#d2dfed', endColorstr='#799bc8',GradientType=0 );">
    <div class="wrap">
        <span id="animationSandbox" style="display: block;" class="zoomIn animated col-md-offset-2"><h1 class="site__title mega">員工資料修改</h1></span>
    </div>

    @using (Html.BeginForm("EmpEdit", "Admin", FormMethod.Post, new { @class = "form-horizontal", encType = "multipart/form-data" }))
    {
        <input type="hidden" value="@Model.EmployeeID" />
        <div class="form-group">
            @Html.LabelFor(p => p.Emp_Name, new { @class = "col-md-3 control-label" })
            <div class="col-md-9">
                @Html.TextBoxFor(p => p.Emp_Name, new { @class = "form-control", placeholder = "您的姓名" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(p => p.Emp_GenderID, new { @class = "col-md-3 control-label" })
            <div class="col-md-9">
                @Html.DropDownListFor(p => p.Emp_GenderID,
                (SelectList)ViewBag.Emp_Imformation,
                "請選擇...",
                new { @class = "form-control", @value = @Model.Emp_GenderID })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(p => p.Emp_DeptID, new { @class = "col-md-3 control-label" })
            <div class="col-md-9">
                @Html.DropDownListFor(p => p.Emp_DeptID,
                (SelectList)ViewBag.Emp_Dept,
                "請選擇...",
                new { @class = "form-control", @value = @Model.Emp_DeptID, id = "Deptsel" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(p => p.Emp_Report, new { @class = "col-md-3 control-label" })
            <div class="col-md-9">
                @Html.DropDownListFor(p => p.Emp_Information2.EmployeeID,
                (SelectList)ViewBag.Emp_Report,
                "請選擇...",
             new { @class = "form-control", @value = @Model.Emp_Information2.EmployeeID, name = "Reportsel" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(p => p.Emp_OccupationID, new { @class = "col-md-3 control-label" })
            <div class="col-md-9">
                @Html.DropDownListFor(p => p.Emp_OccupationID,
             (SelectList)ViewBag.Emp_Occu,
                "請選擇...",
                new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(p => p.Emp_Tel, new { @class = "col-md-3 control-label" })
            <div class="col-md-9">
                @Html.TextBoxFor(p => p.Emp_Tel, new { @class = "form-control", placeholder = "市內電話" })
                @Html.ValidationMessageFor(p => p.Emp_Tel, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(p => p.Emp_CellPhone, new { @class = "col-md-3 control-label" })
            <div class="col-md-9">
                @Html.TextBoxFor(p => p.Emp_CellPhone, new { @class = "form-control", placeholder = "行動電話" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(p => p.Emp_E_Mail, new { @class = "col-md-3 control-label" })
            <div class="col-md-9">
                @Html.TextBoxFor(p => p.Emp_E_Mail, new { @class = "form-control", placeholder = "電子郵件" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(p => p.Emp_Identity, new { @class = "col-md-3 control-label" })
            <div class="col-md-9">
                @Html.TextBoxFor(p => p.Emp_Identity, new { @class = "form-control", placeholder = "身分證字號" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(p => p.Emp_Log, new { @class = "col-md-3 control-label" })
            <div class="col-md-9">
                @Html.TextBoxFor(p => p.Emp_Log, new { @class = "form-control", placeholder = "帳號" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(p => p.Emp_Password, new { @class = "col-md-3 control-label" })
            <div class="col-md-9">
                @Html.TextBoxFor(p => p.Emp_Password, new { @class = "form-control", placeholder = "密碼" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(p => p.Emp_Image, new { @class = "col-md-3 control-label" })

            <div class="col-md-9">
                <input type="file" name="image" vale="img" />
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(p => p.Emp_Address, new { @class = "col-md-3 control-label" })
            <div class="col-md-9">
                @Html.TextAreaFor(p => p.Emp_Address, new { @class = "form-control", placeholder = "輸入您的地址..." })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-3 col-md-9">
                <button type="submit" class="btn btn-success">確認修改</button>
            </div>
        </div>
    }
</div>
<div class="col-md-3"></div>



