@{
    ViewBag.Title = "EmpCreate";
    Layout = "~/Views/Shared/Easy.cshtml";
}
@model BookStore_Web_.Models.Emp_Information
    <link href="~/Content/animate.css" rel="stylesheet" />
   
<div class="col-md-4"></div>

<div class="col-md-4" style="border-radius:30px;background: #d2dfed;background: -moz-linear-gradient(top, #d2dfed 0%, #c8d7eb 26%, #bed0ea 51%, #a6c0e3 51%, #afc7e8 62%, #bad0ef 75%, #99b5db 88%, #799bc8 100%); /* FF3.6-15 */ background: -webkit-linear-gradient(top, #d2dfed 0%,#c8d7eb 26%,#bed0ea 51%,#a6c0e3 51%,#afc7e8 62%,#bad0ef 75%,#99b5db 88%,#799bc8 100%); /* Chrome10-25,Safari5.1-6 */ background: linear-gradient(to bottom, #d2dfed 0%,#c8d7eb 26%,#bed0ea 51%,#a6c0e3 51%,#afc7e8 62%,#bad0ef 75%,#99b5db 88%,#799bc8 100%); /* W3C, IE10+, FF16+, Chrome26+, Opera12+, Safari7+ */ filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#d2dfed', endColorstr='#799bc8',GradientType=0 );">

    <div class="wrap">
        <span id="animationSandbox" style="display: block;" class="zoomIn animated"><h1 class="site__title mega">新增員工資料</h1></span>
    </div>
    @using (Html.BeginForm("EmpCreate", "Admin", FormMethod.Post, new { @class = "form-horizontal", encType = "multipart/form-data" }))
    {
        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(p => p.Emp_Name, new { @class = "col-md-3 control-label" })
            <div class="col-md-9">
                @Html.TextBoxFor(p => p.Emp_Name, new { @class = "form-control EmpName", placeholder = "ex. 王大明" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(p => p.Emp_GenderID, new { @class = "col-md-3 control-label" })
            <div class="col-md-9">
                @Html.DropDownListFor(p => p.Emp_GenderID,
                (SelectList)ViewBag.Emp_Imformation,
                "請選擇...",
                new { @class = "form-control EmpGender" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(p => p.Emp_DeptID, new { @class = "col-md-3 control-label" })
            <div class="col-md-9">
                @Html.DropDownListFor(p => p.Emp_DeptID,
                (SelectList)ViewBag.Emp_Dept,
                "請選擇...",
                new { @class = "form-control EmpDept" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(p => p.Emp_Report, new { @class = "col-md-3 control-label " })
            <div class="col-md-9">
                @Html.DropDownListFor(p => p.Emp_Report,
          (SelectList)ViewBag.Emp_Report,
                "請選擇...",
             new { @class = "form-control EmpReport" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(p => p.Emp_OccupationID, new { @class = "col-md-3 control-label" })
            <div class="col-md-9">
                @Html.DropDownListFor(p => p.Emp_OccupationID,
                (SelectList)ViewBag.Emp_Occu,
                "請選擇...",
                new { @class = "form-control EmpOccu" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(p => p.Emp_Tel, new { @class = "col-md-3 control-label" })
            <div class="col-md-9">
                @Html.TextBoxFor(p => p.Emp_Tel, new { @class = "form-control EmpTel", placeholder = "ex.250000" })
                @Html.ValidationMessageFor(p => p.Emp_Tel, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(p => p.Emp_CellPhone, new { @class = "col-md-3 control-label" })
            <div class="col-md-9">
                @Html.TextBoxFor(p => p.Emp_CellPhone, new { @class = "form-control EmpCell", placeholder = "ex.09XXXXXXXX" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(p => p.Emp_E_Mail, new { @class = "col-md-3 control-label" })
            <div class="col-md-9">
                @Html.TextBoxFor(p => p.Emp_E_Mail, new { @class = "form-control EmpEmail", placeholder = "aaa@gmail.com" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(p => p.Emp_Identity, new { @class = "col-md-3 control-label" })
            <div class="col-md-9">
                @Html.TextBoxFor(p => p.Emp_Identity, new { @class = "form-control EmpId", placeholder = "A123456789" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(p => p.Emp_Log, new { @class = "col-md-3 control-label" })
            <div class="col-md-9">
                @Html.TextBoxFor(p => p.Emp_Log, new { @class = "form-control EmpLog", placeholder = "ex.帳號" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(p => p.Emp_Password, new { @class = "col-md-3 control-label" })
            <div class="col-md-9">
                @Html.TextBoxFor(p => p.Emp_Password, new { @class = "form-control EmpPassword", placeholder = "ex.密碼" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(p => p.Emp_Image, new { @class = "col-md-3 control-label" })
            <div class="col-md-9">
                <input type="file" name="image" vale="img" />
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(p => p.Emp_Address, new { @class = "col-md-3 control-label" })
            <div class="col-md-9">
                @Html.TextAreaFor(p => p.Emp_Address, new { @class = "form-control EmpAddress", placeholder = "輸入您的地址..." })
            </div>
        </div>
        <div class="form-group">
            <div class="form-group">
                <div class="col-md-offset-3 col-md-9">
                    <button type="submit" class="btn btn-success">確認新增</button>
                    <button type="button" class="btn btn-primary DemoCreate">Albert Demo</button>
                </div>
            </div>
        </div>
    }


</div>
<div class="col-md-4"></div>

<script>


    $(document).on('change', '#Emp_DeptID', function (e) {
        //清空
        var sel = $('#Emp_Report');
        sel.empty();
        //重新加入

        $.getJSON('@Url.Action("ConnDept","Admin")', { DepID: e.target.value }, function (data) {
            $.each(data, function () {
                var ConnID = this.ConnID;
                var ConnName = this.ConnName;
                var opt = $('<option></option>').val(ConnID).text(ConnName);
                sel.append(opt);
            });
        })

    })

    $('.DemoCreate').on("click", function () { DemoUser() })
    function DemoUser() {
        $('.EmpName').val('石兆身');
        $('.EmpGender').val('0');
        $('.EmpDept').val('2');
        $('.EmpReport').val('3');
        $('.EmpOccu').val('3');
        $('.EmpTel').val('0223639955');
        $('.EmpCell').val('0975554977');
        $('.EmpEmail').val('p88204@gmail.com');
        $('.EmpLog').val('111');
        $('.EmpId').val('A123456789');
        $('.EmpPassword').val('111');
        $('.EmpAddress').val('台北市八德路三段12巷70弄15號7樓');
    }
</script>
